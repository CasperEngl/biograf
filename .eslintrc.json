{
    "parser": "vue-eslint-parser",
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:vue/essential",
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "route": true
    },
    "parserOptions": {
        "parser": "babel-eslint",
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "indent": 2,
        "import/no-extraneous-dependencies": 0,
        "quotes": [2, "single", { "avoidEscape": true }],
        "no-plusplus": 0,
        "max-len": 0
    }
}