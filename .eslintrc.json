{
    "parser": "vue-eslint-parser",
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:vue/essential",
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "route": true,
        "Echo": true,
        "Nova": true
    },
    "parserOptions": {
        "parser": "babel-eslint",
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "indent": 2,
        "import/no-extraneous-dependencies": 0,
        "quotes": [2, "single", { "avoidEscape": true }],
        "no-plusplus": 0,
        "max-len": 0,
        "global-require": 0,
        "import/prefer-default-export": 0,
        "no-param-reassign": 0,
        "no-continue": 0,
        "no-restricted-syntax": 0,
        "consistent-return": 0,
        "no-return-assign": 0
    }
}